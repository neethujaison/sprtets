<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>        
  <session-factory>
    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="show_sql">true</property>  
    <mapping resource="com/myspringpacks/model/User.hbm.xml"/>
    <mapping resource="com/myspringpacks/model/UploadFile.hbm.xml"/>
    <mapping resource="com/myspringpacks/model/Customer.hbm.xml"/>
    <mapping resource="com/myspringpacks/model/Country.hbm.xml"/>
    <mapping resource="com/myspringpacks/model/City.hbm.xml"/>
  </session-factory>
</hibernate-configuration>